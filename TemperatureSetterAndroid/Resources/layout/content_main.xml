<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_main">

    
        <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Current temperature:"
        android:textSize="70px"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="12.0dp" 
        />

    <TextView
        android:text="Initializing..."
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:textSize="120px"
        android:id="@+id/CrtTemperatureTextView"
        android:layout_marginTop="62.5dp" 
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Desired temperature:"
        android:textSize="70px"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="192.5dp" 
        />

    <Button
        android:id="@+id/IncreaseTempButton"
        android:layout_width="200px"
        android:layout_height="200px"
        android:text="+"
        android:textSize="70px"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="247.0dp" 
            />

    <TextView
        android:text="Initializing..."
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:textSize="120px"
        android:id="@+id/DesiredTemperatureTextView"
        android:layout_marginTop="344.0dp" 
        />

    <Button
        android:id="@+id/DecreaseTempButton"
        android:layout_width="200px"
        android:layout_height="200px"
        android:text="-"
        android:textSize="70px"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="423.5dp" 
            />
</RelativeLayout>
