<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_main"
    android:background="@android:color/holo_orange_light"
    >

    
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Current temperature:"
        android:textSize="100px"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="27.0dp" 
        android:fontFamily="monospace"
    />

    <TextView
        android:text="Connecting.."
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:textSize="200px"
        android:id="@+id/CrtTemperatureTextView"
        android:layout_marginTop="95.5dp" 
        android:fontFamily="monospace"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Desired temperature:"
        android:textSize="100px"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="207.5dp" 
        android:fontFamily="monospace"
        />

    <Button
        android:id="@+id/IncreaseTempButton0"
        android:layout_width="300px"
        android:layout_height="210px"
        android:text="+ 0.1"
        android:textSize="70px"
        android:layout_marginTop="282.0dp" 
        android:layout_marginLeft="60.0dp"
        android:background="@drawable/roundredbutton"   
            />

    <Button
        android:id="@+id/IncreaseTempButton1"
        android:layout_width="300px"
        android:layout_height="210px"
        android:text="+ 1.0"
        android:textSize="70px"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="282.0dp" 
        android:background="@drawable/roundredbutton"
            />

    <Button
        android:id="@+id/IncreaseTempButton5"
        android:layout_width="300px"
        android:layout_height="210px"
        android:text="+ 5.0"
        android:textSize="70px"
        android:layout_marginTop="282.0dp"
        android:layout_marginLeft="225.0dp" 
        android:background="@drawable/roundredbutton"
            />

    <TextView
        android:text="Connecting.."
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:textSize="200px"
        android:id="@+id/DesiredTemperatureTextView"
        android:layout_marginTop="359.0dp" 
        android:fontFamily="monospace"
        />

    <Button
        android:id="@+id/DecreaseTempButton0"
        android:layout_width="300px"
        android:layout_height="210px"
        android:text="- 0.1"
        android:textSize="70px"
        android:layout_marginTop="458.5dp" 
        android:layout_marginLeft="60dp" 
        android:background="@drawable/roundbluebutton"
            />

    <Button
        android:id="@+id/DecreaseTempButton1"
        android:layout_width="300px"
        android:layout_height="210px"
        android:text="- 1.0"
        android:textSize="70px"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="458.5dp" 
        android:background="@drawable/roundbluebutton"
            />

    <Button
        android:id="@+id/DecreaseTempButton5"
        android:layout_width="300px"
        android:layout_height="210px"
        android:text="- 5.0"
        android:textSize="70px"
        android:layout_marginTop="458.5dp"
        android:layout_marginLeft="225.0dp" 
        android:background="@drawable/roundbluebutton"
            />
</RelativeLayout>
